<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="26 Feb 2017"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/layout_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/time_stamp_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="2dp"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="17:55" />

            <TextView
                android:id="@+id/message_text"
                style="@style/chat_view_sender"
                tools:text="@string/example_text" />

            <ImageView
                android:id="@+id/photoImageView_sender"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_pacific"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_sender"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photoImageView_receiver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/user_pratikshya"
                android:visibility="visible" />

            <TextView
                android:id="@+id/message_text_2"
                style="@style/chat_view_receiver"
                tools:text="@string/example_text"/>

            <TextView
                android:id="@+id/time_stamp_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="2dp"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="17:55" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>